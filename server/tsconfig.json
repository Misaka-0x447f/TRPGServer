{
  "compilerOptions": {
    // "target": "es5",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true, // babel compatibility, see https://github.com/Microsoft/TypeScript/issues/16093
    "importHelpers": true,
    "baseUrl": ".",
    "outDir": "./out",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
